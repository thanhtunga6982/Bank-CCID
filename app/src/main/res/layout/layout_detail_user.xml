<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical">


    <include layout="@layout/layout_header_app"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingEnd="10dp">

        <TextView
                android:id="@+id/tvNameTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Name"
                android:textColor="@color/colorGray"
                tools:text="Name"/>

        <TextView
                android:id="@+id/tvNameDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="@color/colorBlack"
                android:layout_marginBottom="13dp"
                android:lineSpacingExtra="4dp"
                tools:text="内容"/>

        <View
                android:id="@+id/viewLineMiddle"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/colorGray"/>

        <!--Item 2-->

        <TextView
                android:id="@+id/tvEmailTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Email"
                android:textColor="@color/colorGray"
                tools:text="Email"/>

        <TextView
                android:id="@+id/tvEmailDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="@color/colorBlack"
                android:layout_marginBottom="13dp"
                android:lineSpacingExtra="4dp"
                tools:text="内容"/>

        <View
                android:id="@+id/viewLineEmail"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/colorGray"/>

        <!--Item Money-->
        <TextView
                android:id="@+id/tvMoneyTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Money Borrow"
                android:textColor="@color/colorGray"
                tools:text="Money Borrow"/>

        <TextView
                android:id="@+id/tvMoneyDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="@color/colorBlack"
                android:layout_marginBottom="13dp"
                android:lineSpacingExtra="4dp"
                tools:text="2,000,000"/>

        <View
                android:id="@+id/viewLineMoney"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/colorGray"/>

        <!--Item Assettax-->
        <TextView
                android:id="@+id/tvAssetTax"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Asset Tax"
                android:textColor="@color/colorGray"
                tools:text="Money Borrow"/>

        <TextView
                android:id="@+id/tvAssetTaxDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="@color/colorBlack"
                android:layout_marginBottom="13dp"
                android:lineSpacingExtra="4dp"
                tools:text="2,000,000"/>

        <View
                android:id="@+id/viewLineAssetTax"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/colorGray"/>

        <!--Item Assettax-->
        <TextView
                android:id="@+id/tvDebtpaymentplan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Debt Payment Plan"
                android:textColor="@color/colorGray"
                tools:text="Debt Payment Plan"/>

        <TextView
                android:id="@+id/tvDebtpaymentplanDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="@color/colorBlack"
                android:layout_marginBottom="13dp"
                android:lineSpacingExtra="4dp"
                tools:text="2,000,000"/>

        <View
                android:id="@+id/viewLineDebtpaymentplan"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/colorGray"/>

        <!--Item total asset-->
        <TextView
                android:id="@+id/tvTotalAsset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Total Asset"
                android:textColor="@color/colorGray"
                tools:text="Total Asset"/>

        <TextView
                android:id="@+id/tvTotalAssetDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="@color/colorBlack"
                android:layout_marginBottom="13dp"
                android:lineSpacingExtra="4dp"
                tools:text="2,000,000"/>
    </LinearLayout>
</LinearLayout>